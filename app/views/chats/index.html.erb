<div class="max-w-lg mx-auto px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Your chat history</h1>
    <%= link_to new_chat_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors flex items-center gap-2" do %>
      <svg class="w-4 h-4" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New chat
    <% end %>
  </div>

  <!-- Search Bar -->
  <%= form_with url: chats_path, method: :get, local: true, class: "mb-6" do |form| %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-gray-400" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <%= form.text_field :search, value: params[:search], placeholder: "Search your chats...", 
          class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg bg-gray-50 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>
  <% end %>

  <!-- Chat Count -->
  <% if @chats.any? %>
    <p class="text-sm text-gray-600 mb-4">
      You have <%= pluralize(@chats.count, 'previous chat') %> with Claude
      <% if params[:search].present? %>
        matching "<%= params[:search] %>"
      <% end %>
      <% unless params[:search].present? %>
        <span class="text-blue-600 hover:underline cursor-pointer">Select</span>
      <% end %>
    </p>
  <% end %>

  <% if @chats.any? %>
    <div class="space-y-3">
      <% @chats.each do |chat| %>
        <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg hover:border-gray-300 transition-all duration-200">
          <div class="flex justify-between items-start">
            <%= link_to chat, class: "flex-1 min-w-0 group" do %>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-gray-700 transition-colors truncate">
                  <%= chat.title.present? ? chat.title : "Chat #{chat.id}" %>
                </h3>
                <p class="text-sm text-gray-600 mb-1">
                  Model: <span class="font-medium"><%= chat.model_id %></span>
                </p>
                <p class="text-xs text-gray-500">
                  Last message <%= time_ago_in_words(chat.updated_at) %> ago
                </p>
              </div>
            <% end %>
            <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
              <%= link_to chat, class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
              <%= button_to chat_path(chat), method: :delete,
                            data: {
                              confirm: "Are you sure you want to delete this chat? This action cannot be undone."
                            },
                            class: "text-gray-400 hover:text-red-600 transition-colors border-0 bg-transparent p-0 cursor-pointer" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No chats yet</h3>
      <p class="text-gray-600 mb-6">Start your first conversation with an AI model</p>
      <%= link_to "Create Your First Chat", new_chat_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors" %>
    </div>
  <% end %>
</div>
